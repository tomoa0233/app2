
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">

     <%= render 'users/user', user: @user, book: @book %>

    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>Title</th>
            <th>Opinion</th>
            <th></th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <td></td>
          <td><%= link_to book.title, book_path %></td>
          <td><%= book.body %></td>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>