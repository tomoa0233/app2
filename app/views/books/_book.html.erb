
  <h2>User info</h2>
      <%= image_tag user.get_profile_image(60,60) %>
      <table class="table">
        <tbody><tr></tr>
        <tr>
      	  <th>name</th>
      	  <th><%= user.name %></th>
        </tr>
        <tr>
      	  <th>introduction</th>
      	  <th><%= user.introduction %></th>
        </tr>
      </tbody></table>
        <%= link_to edit_user_path(user.id) do %>
         <i class="btn btn-outline-secondary btn-block fas fa-user-cog"></i>
        <% end %>
      <br>

        <h2>New book</h2>
         <%= form_with model: new do |f| %>
         <label>Title</label><br>
          <%= f.text_field :title %><br>
         <label>Opinion</label><br>
          <%= f.text_area :body %><br>
         <%= f.submit "Create Book", class: "btn btn-sm btn-success" %>
        <% end %>
    </div>