
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag @user.get_profile_image(100,100) %>
      <table class="table">
        <tbody><tr></tr>
        <tr>
      	  <th>name</th>
      	  <th><%= @user.name %></th>
        </tr>
        <tr>
      	  <th>introduction</th>
      	  <th><%= @user.introduction %></th>
        </tr>
      </tbody></table>
        <%= link_to edit_user_path do %>
         <i class="btn btn-outline-secondary btn-block fas fa-user-cog edit_user_67122"></i>
        <% end %>
      </div>

        
        <h2>New book</h2>
         <%= form_with model: @book do |f| %>
         <label>Title</label><br>
          <%= f.text_field :title %><br>
         <label>Opinion</label><br>
          <%= f.text_area :body %><br>
         <%= f.submit "Create book", class: "btn btn-sm btn-success" %>
        <% end %>

        
        
        </div>
            <div class="col-md-8 offset-md-1">
              <h2>Book detail</h2>
              <table class="table table-hover table-inverse">
                <thead>
                  <tr>
                   <th>Title</th>
                   <th>Opinion</th>
                   <th></th>
                   <th colspan="3"></th>
                  </tr>
                </thead>
                <tbody>
                  <td><%= link_to user.name, user_path %></td>
                  <td><%= link_to book.title, book_path %></td>
                  <td><%= book.body %></td>
                  <% if @book.user == current_user %>
                    <td>
                     <%= link_to "Edit", edit_book_path, class:"btn btn-sm btn-success" %>
                    </td>
                    <td>
                     <%= link_to "Destroy",book_path(@book), method: :delete,  class:"btn btn-sm btn-danger" %>
                    </td>
                </tbody>
              </table>
        
    </div>
  </div>
</div>
