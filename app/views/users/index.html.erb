<%= flash[ :notice] %>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">

     <%= render 'user', user: @user, book: @book %>

    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table table-hover table-inverse">
        <thead>
         <tr>
          <th>image</th>
          <th>name</th>
          <th></th>
         </tr>
        </thead>
        <tbody>
        <tr>
         <% @users.each do |user| %>
         <td><%= image_tag user.get_profile_image(40,40) %></td>
         <td><%= user.name %></td>
         <td><%= link_to "Show",user_path(user.id) %></td>
         </tr>
         <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>